@model StartToBike.Models.RegisterViewModel
@{
    ViewBag.Title = "Registreer";
}
<body>
    <section class="authentication" id="authentication">
        <div class="content">
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <br>
                <br />
                <h4>Maak hier uw account aan.</h4>
                <br />
                @Html.ValidationSummary("", new { @class = "alert" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "input-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "input-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "input-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
                    </div>
                </div>
                <div>
          
                        <input type="submit" class="btn" value="Register" />
                
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </section>
</body>